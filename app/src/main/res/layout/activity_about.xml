<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@color/white1"
    tools:context=".About.AboutActivity">

    <RelativeLayout
        android:layout_marginTop="9dp"
        android:layout_marginHorizontal="12dp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <ImageView
            android:id="@+id/back_about"
            android:src="@drawable/ic_back"
            android:onClick="backAbout"
            android:layout_marginHorizontal="18dp"
            android:layout_width="9dp"
            android:layout_height="match_parent"/>
        <TextView
            android:text="Home Menu"
            android:gravity="center_vertical"
            android:fontFamily="@font/nunito"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:layout_toRightOf="@id/back_about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginStart="24dp"
        android:layout_marginEnd="12dp"
        android:layout_marginVertical="18dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAbout"
            android:src="@drawable/test"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <RelativeLayout
            android:layout_toRightOf="@id/imgAbout"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Edwiko Putra"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/black1"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="BP 20202020"
                android:fontFamily="@font/nunito"
                android:textColor="@color/pink"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Mahasiswa"
                android:fontFamily="@font/nunito"
                android:textColor="@color/black1"
                android:textSize="16sp"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_margin="24dp"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="About This App"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="24sp"
                    android:textColor="@color/black1"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="@string/about"
                    android:fontFamily="@font/nunito"
                    android:textColor="@color/black1"
                    android:textSize="16sp"
                    android:layout_marginVertical="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>