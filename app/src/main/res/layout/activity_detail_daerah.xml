<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Daerah.DetailDaerahActivity">
    <RelativeLayout
        android:background="@drawable/back_bar"
        android:translationZ="1dp"
        android:layout_marginTop="9dp"
        android:layout_marginHorizontal="22dp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <ImageView
            android:id="@+id/back_about"
            android:src="@drawable/ic_back"
            android:layout_marginHorizontal="18dp"
            android:layout_width="9dp"
            android:onClick="backDetailDaerah"
            android:layout_centerVertical="true"
            android:layout_height="match_parent"/>
        <TextView
            android:text="Daerah Rawan Menu"
            android:gravity="center_vertical"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="RtlCompat" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_isi"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.gms.maps.MapView
            android:translationZ="-1dp"
            android:layout_marginBottom="-25dp"
            android:id="@+id/mapView"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="18dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            android:translationZ="-3dp"
            android:layout_width="match_parent"
            android:layout_height="175dp" />
        <LinearLayout
            android:weightSum="5"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="38dp"
            android:layout_marginBottom="24dp"
            android:paddingVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:orientation="vertical">
            <TextView
                android:alpha="1"
                android:layout_weight="0.5"
                android:text="Detail Lokasi"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img1"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_detail_lokasi"
                    android:layout_marginEnd="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/keckel"
                    android:layout_toRightOf="@id/img1"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/nunito"
                    android:text="-"
                    android:textSize="15sp"
                    android:textColor="@color/black1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img2"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_range"
                    android:layout_marginEnd="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/range"
                    android:layout_toRightOf="@id/img2"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/nunito"
                    android:text="-"
                    android:textSize="15sp"
                    android:textColor="@color/black1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img3"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_risk"
                    android:layout_marginEnd="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt"
                    android:layout_toRightOf="@id/img3"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/nunito"
                    android:text="Tingkat Bahaya "
                    android:textSize="15sp"
                    android:textColor="@color/black1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/risk"
                    android:layout_toRightOf="@id/txt"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/nunito_bold"
                    android:text="-"
                    android:textSize="15sp"
                    android:textColor="@color/pink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_weight="1.5"
                android:onClick="detailInformasi"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="end"
                    android:fontFamily="@font/nunito"
                    android:layout_toStartOf="@id/forward"
                    android:text="Lihat Berita daerah ini"
                    android:textSize="15sp"
                    android:textColor="@color/blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/forward"
                    android:src="@drawable/ic_forward"
                    android:layout_centerVertical="true"
                    android:paddingHorizontal="8dp"
                    android:layout_width="22dp"
                    android:layout_alignParentEnd="true"
                    android:layout_height="22dp"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/loading"
        android:visibility="gone"
        android:layout_margin="30dp"
        android:layout_centerInParent="true"
        android:src="@drawable/lottie_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>