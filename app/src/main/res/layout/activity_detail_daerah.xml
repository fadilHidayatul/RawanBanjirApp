<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Daerah.DetailDaerahActivity">

    <TextView
        android:id="@+id/testText"
        android:text="Tempat maps"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.cardview.widget.CardView
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="18dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="12dp"
        android:translationZ="-3dp"
        android:alpha="0.2"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:weightSum="5"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="38dp"
        android:layout_marginBottom="24dp"
        android:paddingVertical="8dp"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="vertical">
        <TextView
            android:alpha="1"
            android:layout_weight="1"
            android:text="Detail Lokasi"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img1"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_detail_lokasi"
                android:layout_marginEnd="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/keckel"
                android:layout_toRightOf="@id/img1"
                android:layout_centerVertical="true"
                android:fontFamily="@font/nunito"
                android:text="Kecamatan Bungus Teluk Kabung Kelurahan Bungus Utara Desa Terbarukan Di Utara"
                android:textSize="15sp"
                android:textColor="@color/black1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img2"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_range"
                android:layout_marginEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/range"
                android:layout_toRightOf="@id/img2"
                android:layout_centerVertical="true"
                android:fontFamily="@font/nunito"
                android:text="112.05 meter"
                android:textSize="15sp"
                android:textColor="@color/black1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>