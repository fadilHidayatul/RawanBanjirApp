<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardInformasi"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    app:cardCornerRadius="12dp"
    android:backgroundTint="@color/white"
    android:layout_marginHorizontal="30dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgInformasi"
                android:src="@drawable/test"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:background="@drawable/ic_tgl"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tglInformasi"
                    android:text="22-01-1999"
                    android:fontFamily="@font/nunito"
                    android:textColor="@color/black1"
                    android:textSize="12sp"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/judulInformasi"
            android:layout_weight="2"
            android:text="Informasi kebakaran karena banjir"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/black1"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>